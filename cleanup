#!/usr/bin/env sh
# script used to delete all nonessential files in the directory,
# i.e. image files and other garbage

read -p "How many file types would you like to remove?: " count
for ((i=0; $i lt $count; ((count++))))
  echo "What kind of file extensions would you like to remove (for example: .png): "
echo "WARNING: THIS WILL DELETE ALL THESE FILE TYPES FROM THIS DIRECTORY."
read -p "ARE YOU SURE YOU WANT TO CONTINUE? (Y/N): " prompt

if [[ $prompt == Y ]] || [[ $prompt == y ]]; then
  for file in ./*.png; do
    rm $file 2>/dev/null
  done
  for file in ./*.html; do
    rm $file 2>/dev/null
  done
  echo "Cleanup successful."
else
  echo "Exiting..."
  exit 0
fi
